<body>

  <%- include('partials/header') %>
    <!-- <h3 class="compose">COMPOSE</h3> -->
    <form class="form1" action="/create-post" method="POST">
      <p>Title</p>
      <div class="title_div">
        <input type="text" id="title" name="title" required />
      </div>
      <div>
        <p>Type</p>
         
          <div    class="type"    ;>
            <select class="form-select" name="picker" aria-label="Default select example" id="kk">
               
             
              <option value="Blogs">Blog</option>
              
              <option value="Interview Experience">Interview Experience</option>
              <option value="Notice">Notice</option>
          </select>
  
          </div>
        
      </div>
      <br />
      <p>Your Experience</p>
      <div id="content-div">
        <textarea name="content" id="content" cols="20" rows="20" required></textarea>
      </div>
 
      <div class="post_btn">
        <button type="submit" id="submit"> POST</button>
      </div>
    </form>
